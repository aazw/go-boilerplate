{
  "name": "vsc-go-boilerplate-${localWorkspaceFolderBasename}-${devcontainerId}",
  "dockerComposeFile": [
    // ここに改行入れておけばPrettierによって配列が1行にならない
    "../compose.yaml",
    "./compose.yaml"
  ],
  "initializeCommand": "bash -lc 'mkdir -p \"${localWorkspaceFolder}/.devcontainer/.state/claude\" \"${localWorkspaceFolder}/.devcontainer/.state/codex\"'",
  "service": "devcontainer",
  "runServices": [
    // ここに改行入れておけばPrettierによって配列が1行にならない
    "postgres",
    "pgweb",
    "valkey",
    "redisinsight",
    "grafana",
    "mimir",
    // "prometheus",
    "alloy",
    "tempo",
    "pyroscope",
    "loki",
    "promtail",
    "opentelemetry-collector",
    "redocly-preview"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.RunOnSave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt",
        "golang.go"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      }
    }
  },
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  // containerUser は、コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "containerUser": "root",
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1",
    "CGO_ENABLED": "0",
    "GOAPP_CONFIG": "config/goapp/config.yaml"
  },
  "postAttachCommand": "task init",
  "shutdownAction": "stopCompose"
}
